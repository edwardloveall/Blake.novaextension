{
    "identifier": "is.flother.Blake",
    "name": "Blake",
    "organization": "Flother",
    "description": "Lint your Python source code with Flake8",
    "version": "0.2.0",
    "categories": ["issues"],
    "repository": "https://github.com/flother/nova-blake",
    "bugs": "https://github.com/flother/nova-blake/issues",
    "license": "MIT",
    "main": "main.js",
    "activationEvents": [
        "onLanguage:python",
    ],
    "entitlements": {
        "process": true
    },
    "configWorkspace": [
        {
            "key": "is.flother.Blake.flake8ExecutablePath",
            "title": "Flake8 path",
            "description": "Path to this workspace's Flake8 executable",
            "type": "path",
            "placeholder": "/usr/bin/env flake8"
        }
    ]
}
